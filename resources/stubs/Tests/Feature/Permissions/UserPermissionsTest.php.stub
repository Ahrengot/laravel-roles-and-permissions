<?php

use App\Enums\UserRole;
use App\Models\User;
use App\Permissions\Permission;

it('guards access to the admin panel', function (UserRole $role, bool $expectation) {
    $user = new User(['role' => $role]);

    expect(
        $user->can(Permission::AccessAdminPanel)
    )->toBe($expectation);
})->with([
    [UserRole::Admin, true],
    [UserRole::User, false],
]);

